@model Mailman.Web.Models.EmailModel

<form method="post">
    <h1 class="text-center">Email Composer</h1>
    <div class="form-group">
        <label for="From">From</label>
        <input class="form-control" type="text" name="From" placeholder="email" value="@Model.From" />
    </div>
    <div class="form-group">
        <label for="To">To</label>
        <input class="form-control" type="text" name="To" placeholder="comma-separated emails" value="@Model.To" />
    </div>
    <div class="form-group">
        <label for="Cc">Cc</label>
        <input class="form-control" type="text" name="Cc" placeholder="comma-separated emails (optional)" value="@Model.Cc" />
    </div>
    <div class="form-group">
        <label for="Bcc">Bcc</label>
        <input class="form-control" type="text" name="Bcc" placeholder="comma-separated emails (optional)" value="@Model.Bcc" />
    </div>
    <div class="form-group">
        <label for="Subject">Subject</label>
        <input class="form-control" type="text" name="Subject" placeholder="comma-separated emails (optional)" value="@Model.Subject" />
    </div>
    <div class="form-group">
        <label for="Body">Body</label>
        <textarea class="form-control" type="text" name="Body" placeholder="type here" >@Model.Body</textarea>
    </div>
    @if (Model.HasErrors || !string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary()
            @Model.Error
        </div>
    }
    <div class="form-group">
        <input type="submit" class="btn btn-primary"/>
    </div>
</form>

